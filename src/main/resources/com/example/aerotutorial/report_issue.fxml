<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.aerotutorial.ReportIssueController" style="-fx-background-color: #ecf0f1;">

    <!-- Top Header -->
    <top>
        <VBox style="-fx-background-color: #e67e22; -fx-padding: 20;">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="âš ï¸ Report Environmental Issue" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: white; -fx-padding: 5 0 0 0;" text="Report bad AQI or environmental concerns to government officials" />
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 30;">

                <!-- Report Form -->
                <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="ðŸ“ Issue Report Form" />
                    <Separator />

                    <!-- Reporter Name -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Your Name:" />
                        <TextField fx:id="reporterNameField" promptText="Enter your name" style="-fx-font-size: 13px; -fx-padding: 10;"/>
                    </VBox>

                    <!-- Location -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Location:" />
                        <TextField fx:id="locationField" promptText="Enter location (e.g., Downtown, Latitude,Longitude)" style="-fx-font-size: 13px; -fx-padding: 10;"/>
                    </VBox>

                    <!-- Issue Type -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Issue Type:" />
                        <ComboBox fx:id="issueTypeComboBox" promptText="Select issue type" prefWidth="400" style="-fx-font-size: 13px;"/>
                    </VBox>

                    <!-- Severity Level -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Severity Level:" />
                        <ComboBox fx:id="severityComboBox" promptText="Select severity" prefWidth="400" style="-fx-font-size: 13px;"/>
                    </VBox>

                    <!-- Current AQI (if known) -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Current AQI (Optional):" />
                        <TextField fx:id="aqiField" promptText="Enter current AQI if known" style="-fx-font-size: 13px; -fx-padding: 10;"/>
                    </VBox>

                    <!-- Description -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Description:" />
                        <TextArea fx:id="descriptionArea" promptText="Describe the environmental issue in detail..." prefHeight="150" wrapText="true" style="-fx-font-size: 13px; -fx-padding: 10;"/>
                    </VBox>

                    <!-- Contact Information -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Contact Email/Phone (Optional):" />
                        <TextField fx:id="contactField" promptText="Enter your contact information for follow-up" style="-fx-font-size: 13px; -fx-padding: 10;"/>
                    </VBox>

                    <!-- Action Buttons -->
                    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                        <Button onAction="#submitReport" prefWidth="200"
                                style="-fx-font-size: 16px; -fx-padding: 15 30; -fx-background-color: #e67e22; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-weight: bold;"
                                text="ðŸ“¤ Submit Report" />
                        <Button onAction="#cancel" prefWidth="200"
                                style="-fx-font-size: 16px; -fx-padding: 15 30; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-weight: bold;"
                                text="âŒ Cancel" />
                    </HBox>

                    <!-- Status Label -->
                    <Label fx:id="statusLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-alignment: center;" wrapText="true"/>
                </VBox>

                <!-- Guidelines -->
                <VBox spacing="15" style="-fx-background-color: #fff3cd; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #ffc107; -fx-border-width: 2; -fx-border-radius: 10;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #856404;" text="ðŸ“‹ Reporting Guidelines" />
                    <VBox spacing="8">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #856404;" text="â€¢ Be specific about the location and time of the issue" wrapText="true"/>
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #856404;" text="â€¢ Provide as much detail as possible in the description" wrapText="true"/>
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #856404;" text="â€¢ Include current AQI measurements if available" wrapText="true"/>
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #856404;" text="â€¢ Your report will be reviewed by government officials" wrapText="true"/>
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #856404;" text="â€¢ Emergency situations should be reported to local authorities immediately" wrapText="true"/>
                    </VBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>

